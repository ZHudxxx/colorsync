<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.colorsync.MainActivity"
    android:background="@drawable/background">

    <!-- Login Button -->
    <Button
        android:id="@+id/btnMainLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#114FAA"
        android:fontFamily="@font/bebas_neue"
        android:text="LOGIN"
        android:textSize="26sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnNickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Enter Nickname Button -->
    <Button
        android:id="@+id/btnNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#114FAA"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Enter Nickname"
        android:textSize="26sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="360dp" />

    <!-- View Records Button -->
    <Button
        android:id="@+id/btnViewRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#114FAA"
        android:fontFamily="@font/bebas_neue"
        android:text="View Records"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/btnMainLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
